<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.pbw.main.member.MemberDAO">
  	<insert id="setFileJoin" parameterType="MemberFileDTO">
  		INSERT INTO
  			MEMBERFILE
  		VALUES
  			(
  			FILE_SEQ.NEXTVAL,
  			#{id},
  			#{fileName},
  			#{originalName}
  			)
  	</insert>
  
	<select id="getLogin" resultMap="getLoginResult" parameterType="MemberDTO">
		SELECT
			M.*, MF.*
		FROM
			MEMBER M
			LEFT OUTER JOIN MEMBERFILE MF
				ON (M.ID = MF.ID)
		WHERE
			M.ID=#{id} AND M.PW=#{pw}
	</select>
	
	<resultMap type="MemberDTO" id="getLoginResult">
		<id column="ID" property="id"/>
		<result column="PW" property="pw"/>
		<result column="NAME" property="name"/>
		<result column="EMAIL" property="email"/>
		<result column="BIRTH" property="birth"/>
		
		<association property="memberFileDTO" javaType="MemberFileDTO">
			<result column="FILENUM" property="fileNum"/>
			<result column="FILENAME" property="fileName"/>
			<result column="ORIGINALNAME" property="originalName"/>
		</association>	
	</resultMap>
	
	<insert id="setJoin" parameterType="MemberDTO">
		INSERT INTO
			MEMBER
			(
			ID,
			PW,
			NAME,
			EMAIL,
			BIRTH
			)
		VALUES
			(
			#{id},
			#{pw},
			#{name},
			#{email},
			#{birth}
			)
	</insert>
  </mapper>